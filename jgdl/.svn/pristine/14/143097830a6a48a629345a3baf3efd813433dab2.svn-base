$().ready(function(){
	//表单验证绑定
	$("#objectForm").Validform({
		tiptype:function(msg,o,cssctl){
			var objtip = $("#msg");
			cssctl(objtip,o.type);
			objtip.text(msg);
		},
		callback:function(form){	//验证后回调
			//执行自定义表单提交
			addOrUpdateProject();
			//默认提交关闭
			return false;
		}
	});
	listProject("");
});

function listProject(searchWord){
	$("#projectGrid").uiGrid({ 
		url : "selectProjectPageInfo.do",
		rowNum : 10,//每页显示记录数
		columns : [ {
			field : 'gcmc',
			title : '工程名称',
			width : 200,
		},{
			field : 'jzlb',
			title : '建筑类别',
			width : 100,
			statusStyle : [{
				status:'this',
				statusClass:"label label-success"
				}]
		},{
			field : 'gcdz',
			title : '工程地址',
			width : 200,
		},{
			field : 'dqsfld',
			title : '地区设防烈度',
			width : 100,
			statusStyle : [{
				status:'this',
				statusClass:"label label-warning"
				}]
		},{
			field : 'dzjsd',
			title : '地震加速度',
			width : 100,
			statusStyle : [{
				status:'this',
				statusClass:"label label-warning"
				}]
		},{
			field : 'dzlx',
			title : '地震类型',
			width : 100,
			statusStyle : [{
				status:'this',
				statusClass:"label label-success"
				}]
		},{
			field : 'fwxt',
			title : '服务系统',
			width : 200,
		}],
		divId : "#projectGrid",
		showPage : 5,//显示
		showDelete : true,
		showEdit : true,
		showDeleteEvent : showDelete,
		showEditEvent : showEditControl,
		jsonPager : {
			root : "datas",// 当前页数据
			records : "rowCount",//总记录数
			currentPage : 1,//当前访问页
			total : "pageCount"//总页数
		},
		data : {
			searchWord : searchWord,
		}
	});
}

/**
  * addOrUpdateProject:(新增或修改项目)
  * TODO(这里描述方法适用条件/执行流程/使用方法/注意事项)
  * @author: 黄月
  * @dateTime: 2017-10-18 下午7:59:14
  * @param: 
  * @return: void
 */
function addOrUpdateProject(){
	var squ = $("#squ").val();
	if (squ != "") {
		updateProject();
	} else {
		addProject();
	}
}

/**
  * showAddModal:(新增项目模态框)
  * TODO(这里描述方法适用条件/执行流程/使用方法/注意事项)
  * @author: 黄月
  * @dateTime: 2017-10-17 下午8:47:16
