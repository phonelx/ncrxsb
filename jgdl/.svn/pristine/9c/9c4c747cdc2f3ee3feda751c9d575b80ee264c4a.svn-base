  * @return: void
 */
function showAddModal() {
	if (level == 0) {
		//弹出新增项目模态框
		showAddProjectModal();
	} else if (level == 1) {
		showAddChildModal();
	} else if (level == 2) {
		showAddSiteModal();
	} else if (level == 3) {
		showAddHolderModal();
	}
}


