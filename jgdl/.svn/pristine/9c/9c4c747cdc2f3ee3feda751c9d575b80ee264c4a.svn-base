  * @dateTime: 2018-2-7 上午9:56:58
  * @param: 
  * @return: void
 */
function expandProjectTree(){
	//调用project.js加载项目树
	loadProjectTree(1);
	$(".topnav").accordion({
		accordion : false,
		speed : 500,
		closedSign : '[+]',
		openedSign : '[-]'
	});
	//调用project.js加载项目列表
	$('.project_list').show();
	listProject("");
}

/**
  * expandChildTree:(展开子项目树事件)
  * TODO(这里描述方法适用条件/执行流程/使用方法/注意事项)
  * @author: 黄月
  * @dateTime: 2018-2-7 上午9:58:33
  * @param: 
  * @return: void
 */
function expandChildTree(object){
	//保存当前项目
	_projectObj = object;
	
	$('.child_list').show();
	//调用project.js加载项目信息
	$('.project_msg').show();
	showProjectMsg(object);
	$('.count_msg').show();
	
	//调用child.js加载子项目列表和树
	loadChildTreeAndList(object.project_squ);
}

/**
