/**
  * loadTree:(加载树菜单)
  * TODO(加载项目树时需要分页)
  * @author: 黄月
  * @dateTime: 2018-2-6 下午2:41:29
  * @param: 
  * @return: void
 */
function loadTree(treeLevel, object) {
	//获取当前级数
	level = treeLevel;
	//隐藏列表
	$('.list_div').hide();
	$('.msg_div').hide();
	if (treeLevel == 0) {
		expandProjectTree();
	} else if (treeLevel == 1) {
		expandChildTree(object);
	} else if (treeLevel == 2) {
		expandSiteTree(object);
	} else if (treeLevel == 3) {
		expandHolderTree(object);
	}
}

/**
