function showDeleteEvent(row) {
	if (row != undefined) {
		deleteEvent(row);
	}
}

function deleteEvent(row) {
	Modal.confirm(
  {
    msg: "确认删除？"
  })
  .on( function (e) {
	  if(e){
			$.ajax({
				type : "post",
				url : "delChildMenu.do",
				timeout : 1321231232131213123,
				data : {
					"squ" : row.SQU,
				},
				success : function(data) {
				
						searchWord();
					},
				
				error : function() {
					Modal.alert(
					  {
					    msg: '删除分类信息出错',
					    title: '消息提示',
					    btnok: '确定',
					    btncl:'取消'
					    	
					  });
				}
			});
	  }
  });
}

