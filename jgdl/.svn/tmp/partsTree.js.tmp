var i=0;
function parentload(obj){

	$("#navg").text($(obj).attr("title"));
	$("#pd").val($(obj).attr("id"));
	$("#input_search").attr("value","关键字搜索");
	loadMenu(obj);
	searchWord();
}


//重新加载左部菜单列表
function loadMenu(obj){
	var squ=$(obj).attr("id");
	var flag = $(obj).attr("flag");
	var isEnd = $(obj).attr("isEnd");
	$("#ifEnd").val(isEnd);
	if(flag==1){
		$.ajax({
			type : 'post',
			url : 'getPatrsMenu.do',
			timeout : 1321231232131213123,
			dataType:"json",
			async : false, //是否发送异步请求	
			data:{
				squ:squ
			},
			success : function(data) {
				var html = "";
				var list = data.list				
				if(data.list[0]!=undefined){
					
					for(var i = 0;i < data.list.length; i++){
						
							html+=" <li class='border-bottom' style='display:block; padding-left:15px;'>";
							html+=" <a href='javascript:void(0);'  style='color:#3f9fd9;' class='ajax-link'  flag='1' id='"+data.list[i].SQU+"'  title ='"+data.list[i].LBMC+"' isEnd = "+data.list[i].JD+" onclick='parentload(this);'>";
							html+=" <i class='icon-darkgray '></i>&nbsp;"+data.list[i].LBMC+"</a>";
							/*html += "<i class='" + data.list[i].ICON + "'></i> " +data.list[i].LBMC+ "</a>";*/
							if(data.list[i].JD==0){
								html+=" <ul class='topnav' >";
								html+=" </ul>";
							}
							html+=" </li>";
					}
					if(squ==0){
						$(obj).parent().parent().find("ul").html(html);
						$(obj).parent().parent().find("ul").accordion({
							accordion:false,
							speed: 300,
							closedSign: '[+]',
							openedSign: '[-]'
						});
					}else{
					$(obj).parent().find("ul").html(html);
					$(obj).next("ul").accordion({
							accordion:false,
							speed: 300,
							closedSign: '[+]',
							openedSign: '[-]'
						});
					}
				}
			},
			error : function() {
				Modal.alert(
				  {
				    msg: '资源分离列表加载出错',
				    title: '消息提示',
				    btnok: '确定',
				    btncl:'取消'
				    	
				  });
			}
		});
		$(obj).attr("flag","0");
	}else{
		$(obj).attr("flag","1");
	}

}

/*****关键字检索****/
var query="";
function searchWord(){
	var word = $("#input_search").attr("value");
	if (word=="关键字搜索") {
		query ="";
	}else{
		query=" TYPENAME LIKE '%"+word+"%'";
	} 
	gridload($("#pd").val());
}

//加载表格
var grid ;
var pageNo =1;
function gridload(obj){
	
	$("#uigrld").uiGrid({
		url : "getChildMenu.do",
		rowNum : 10,//每页显示记录数
		columns : [  {
			field : 'LBMC',
			title : '产品名称',
			width : 220
		}, {
			field : 'DMLB',
			title : '识别码',
			width : 200
		}],
		divId : "#uigrld",
		showPage : 5,//显示
		showEdit : true,
		showDelete : true,
		
		showEditEvent : showEditEvent,
		showDeleteEvent : showDeleteEvent,
		data : {
			squ:obj,
			searchKey:query
		},
		jsonPager : {
			root : "datas",// 当前页数据
			records : "rowCount",//总记录数
			currentPage : pageNo,//当前访问页
			total : "pageCount"//总页数
		}
	});	
}

function addChildMenu(){
	
	     
		 if($("#ifEnd").val()!=1){
			var cid = $("#pd").val();	
			//alert(cid)
			$("#LBMC").val("");
			$("#DMLB").val("");
		
			$("#rsqu").val(cid);
			if(cid !=""){
			$("#secondTitle").html("新增子目");
			$("#example2").modal();
			$('#sortBtn').unbind();
			$('#sortBtn').click(function(){
				// Output(row.SQU);//赋值
				//alert(cid)
				$.ajax({
					url:'addChildMenu.do',
					type:'post',
					data:{
						//'wzz.SQU':row.SQU,
						'wzz.DMLB':$('#DMLB').val(),
						'wzz.LBMC':$('#LBMC').val(),
						'wzz.PARENTSQU':cid,
						'wzz.JD':0,
					},
					success:function(data){
							$('#closeWin').click();
							searchWord();  
						
					},
					error:function(){
						alert("编辑出错！");
					}
				});
			});
			}
		}else{
			Modal.alert(
			  {
			    msg: '当前分类已结束',
			    title: '消息提示',
			    btnok: '确定',
			    btncl:'取消'
			    	
			  });
			return false;
		}
		
		
}
